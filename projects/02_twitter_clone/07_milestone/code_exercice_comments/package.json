{
  "name": "my-twitter-clone",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "docker:dev": "docker compose up --remove-orphans",
    "docker:dev:bg": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v",
    "db:seed": "curl http://localhost:3000/api/demo-data",
    "docker:build": "docker build -t my-twitter-clone .",
    "docker:build:gcp": "DOCKER_BUILDKIT=1 docker build -t gcr.io/redi-fullstack-demo/my-twitter-clone .",
    "docker:push:gcp": "docker push gcr.io/redi-fullstack-demo/my-twitter-clone",
    "docker:deploy:gcp": "gcloud run deploy my-twitter-clone --image gcr.io/redi-fullstack-demo/my-twitter-clone --platform managed --region us-central1 --allow-unauthenticated --set-env-vars USE_DATABASE=false --port 3000",
    "docker:deploy:gcp-source": "gcloud run deploy my-twitter-clone --source . --platform managed --region us-central1 --allow-unauthenticated --set-env-vars USE_DATABASE=false --port 3000",
    "docker:run:local": "docker run -p 3000:3000 --env-file .env.local my-twitter-clone"
  },
  "dependencies": {
    "ioredis": "^5.8.2",
    "mongoose": "^8.20.0",
    "next": "16.0.3",
    "next-auth": "^4.24.13",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "tailwindcss": "^4"
  }
}
